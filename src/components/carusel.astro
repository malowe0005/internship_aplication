<style>

a {
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background-color: var(--color-yellow);
    opacity: 0.75;
    transition: opacity ease 250ms;
}

a:hover {
    opacity: 1;
}

.shuffleImg {
    animation: animate 15s linear infinite;
}

.shuffleImg:nth-child(1){
    animation-name: animate1;
    z-index: 2;
}
.shuffleImg:nth-child(2){
    animation-name: animate2;
    z-index: 1;
}
.shuffleImg:nth-child(3){
    animation-name: animate3;
    z-index: 0;
}

@keyframes animate1{
    0%{
        opacity: 1;
    }
    32%{
        opacity: 1;
    }
    33%{
        opacity: 0;
    }
    99%{
        opacity: 0;
    }
    100%{
        opacity: 1;
    }
}
@keyframes animate2{
    0%{
        opacity: 0;
    }
    31%{
        opacity: 1;
    }
    32%{
        opacity: 1;
    }
    65%{
        opacity: 1;
    }
    66%{
        opacity: 0;
    }
    100%{
        opacity: 0;
    }
}
@keyframes animate3{
    0%{
        opacity: 0;
    }
    64%{
        opacity: 1;
    }
    65%{
        opacity: 1;
    }
    99%{
        opacity: 1;
    }
    100%{
        opacity: 1;
    }
}
</style>