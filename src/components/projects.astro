---
const {header, type, information, image, imageText} = Astro.props;
---
<!-- class="max-w-sm mx-auto mt-50 pb-10" -->

<section class="grow shrink-0 basis-full snap-start">
    <h3 class="text-4xl">{header}</h3>
    <p class="text-lg italic font-semibold text-yellow">{type}</p>
    <p class="text-white mt-5">{information}</p>
    <img class="mt-8" src={image} alt={imageText}>
</section>